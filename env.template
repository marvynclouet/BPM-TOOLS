# Supabase (OBLIGATOIRE)
NEXT_PUBLIC_SUPABASE_URL=https://xxxxx.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Stripe (optionnel pour commencer)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Google Calendar (optionnel)
GOOGLE_CALENDAR_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CALENDAR_CLIENT_SECRET=xxxxx
GOOGLE_CALENDAR_REFRESH_TOKEN=xxxxx

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# WhatsApp Business API (optionnel - pour création automatique de groupes)
WHATSAPP_ACCESS_TOKEN=xxxxx
WHATSAPP_PHONE_NUMBER_ID=xxxxx

# Resend (pour envoi d'emails - recommandé)
# Créez un compte gratuit sur https://resend.com
# Limite gratuite : 100 emails/jour, 3000 emails/mois
# Domaine configuré : bpmformation.fr
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=BPM Formation <noreply@bpmformation.fr>

# Meta Pixel (Facebook/Meta Ads - optionnel)
# Trouvez votre Pixel ID dans: https://business.facebook.com/events_manager2/list/pixel
# Le pixel track automatiquement les conversions (soumissions de formulaire)
NEXT_PUBLIC_META_PIXEL_ID=your_meta_pixel_id_here
